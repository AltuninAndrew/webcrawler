using System;
using System.Collections.Generic;
using System.Text.RegularExpressions;
using System.Net;

namespace WebCrawler
{
    class Crawler
    {
        private WebClient _webClient = new WebClient();
        private string patternDefault = '"'+@"\/[\w\-_]+([\w\-\.,@?^=% &amp;:/~\+#]*[\w\-\@?^=%&amp;/~\+#])?" + '"';
        
        // how find all links in tag "href=", herewith this tag DON'T MUST have in result string ?
        
        public List<String> GetAllLinkInPage(string url)
        {
            string tempStr;
            List<String> links = new List<string>();
            tempStr = _webClient.DownloadString(url);
            MatchCollection matchCollection = Regex.Matches(tempStr, patternDefault);
            for(int i = 0;i<matchCollection.Count;i++)
            {
              
                links.Add(matchCollection[i].ToString());
            }
            return links;
        }
        
    }
}
